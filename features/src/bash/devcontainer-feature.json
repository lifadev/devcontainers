{
  "id": "bash",
  "name": "bash",
  "version": "0.1.1",
  "containerEnv": {
    "LANG": "C.UTF-8"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "shellcheck.executablePath": "/opt/bin/shellcheck",
        "shellformat.path": "/opt/bin/shfmt",
        "shellformat.useEditorConfig": true,
        "[shellscript]": {
          "editor.defaultFormatter": "foxundermoon.shell-format"
        }
      },
      "extensions": [
        "foxundermoon.shell-format",
        "mads-hartmann.bash-ide-vscode",
        "timonwong.shellcheck"
      ]
    }
  }
}
