{
  "id": "bash",
  "name": "bash",
  "version": "2025.7.6",
  "customizations": {
    "vscode": {
      "settings": {
        "shellcheck.executablePath": "/opt/bin/shellcheck",
        "shellformat.path": "/opt/bin/shfmt",
        "shellformat.useEditorConfig": true,
        "[shellscript]": {
          "editor.defaultFormatter": "foxundermoon.shell-format"
        }
      },
      "extensions": [
        "foxundermoon.shell-format",
        "mads-hartmann.bash-ide-vscode",
        "timonwong.shellcheck"
      ]
    },
    "manifest": {
      "dependencies": [
        {
          "name": "shellcheck",
          "version": "0.10.0",
          "hint": "tags/v?[0-9]+\\.[0-9]+(\\.[0-9]+)?",
          "repository": "github.com/koalaman/shellcheck",
          "artifacts": [
            {
              "architecture": "amd64",
              "url": "https://github.com/koalaman/shellcheck/releases/download/v${VERSION}/shellcheck-v${VERSION}.linux.x86_64.tar.xz",
              "checksum": "6c881ab0698e4e6ea235245f22832860544f17ba386442fe7e9d629f8cbedf87"
            },
            {
              "architecture": "arm64",
              "url": "https://github.com/koalaman/shellcheck/releases/download/v${VERSION}/shellcheck-v${VERSION}.linux.aarch64.tar.xz",
              "checksum": "324a7e89de8fa2aed0d0c28f3dab59cf84c6d74264022c00c22af665ed1a09bb"
            }
          ]
        },
        {
          "name": "shfmt",
          "version": "3.12.0",
          "hint": "tags/v?[0-9]+\\.[0-9]+(\\.[0-9]+)?",
          "repository": "github.com/mvdan/sh",
          "artifacts": [
            {
              "architecture": "amd64",
              "url": "https://github.com/mvdan/sh/releases/download/v${VERSION}/shfmt_v${VERSION}_linux_amd64",
              "checksum": "d9fbb2a9c33d13f47e7618cf362a914d029d02a6df124064fff04fd688a745ea"
            },
            {
              "architecture": "arm64",
              "url": "https://github.com/mvdan/sh/releases/download/v${VERSION}/shfmt_v${VERSION}_linux_arm64",
              "checksum": "5f3fe3fa6a9f766e6a182ba79a94bef8afedafc57db0b1ad32b0f67fae971ba4"
            }
          ]
        }
      ]
    }
  }
}
